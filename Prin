    <script>
        // Afiseaza mesajul de avertisment
        document.getElementById("warning").style.display = "block";
        
        // Afiseaza bara de incarcare si textul de incarcare
        var loaderContainer = document.querySelector(".loader-container");
        var loader = document.querySelector(".loader");
        var loadingText = document.getElementById("loading-text");
        loaderContainer.style.display = "block";

        // Simuleaza incarcarea
        var progress = 0;
        var interval = setInterval(function() {
            progress += 1;
            loader.style.width = progress + "%";
            loadingText.textContent = "ÃŽncÄƒrcare... " + progress + "%";
            if (progress >= 100) {
                clearInterval(interval);
                loaderContainer.style.display = "none";
                setTimeout(function() {
                    document.getElementById("joke").style.display = "block";
                    document.getElementById("loading-text").textContent = "Am glumit!";
                }, 15000); // AfiÈ™eazÄƒ mesajul dupÄƒ 15 de secunde
            }
        }, 150); // Timpul estimat pentru Ã®ncÄƒrcare (15 secunde * 1000 / 100 = 150)
    </script>
